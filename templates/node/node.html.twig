<article{{ attributes.addClass(classes) }}>
	{% if not page and title or title_prefix or title_suffix or display_submitted %}
		<header>
			{{ title_prefix }}
			{% if not page and title %}
				<h2 class="inner-tittle">
					<a href="{{ node_url }}">{{ title }}</a>
				</h2>
			{% endif %}
			{{ title_suffix }}
			{% if display_submitted %}
				<span class="submitted">
					{{ user_picture }}
					{{ submitted }}
				</span>
			{% endif %}
		</header>
	{% endif %}
	<div class="graph">
		<div
			class="block-page">
			{# Hide comments, tags, and links now so that we can render them later. #}
			hide(content.comments)
			   hide(content.links)
			   hide(content.field_tags)
			{{ content }}

			{# Only display the wrapper div if there are tags or links. #}
			{% set field_tags = content.field_tags %}
			{% set links = content.links %}
			{% if field_tags or links %}
				<footer>
					{{ field_tags }}
					{{ links }}
				</footer>
			{% endif %}
			{{ content.comments }}
		</div>
	</div>
</article>
